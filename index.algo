ALGORITHM First Task
VAR
    str:STRING:="";
    number_of_words:INTEGER:=0;
    number_of_vowels:INTEGER:=0;
BEGIN
    REPEAT
        Write("write a string");
        Read(str);
    UNTIL (str[length-1]==".")
    FOR(i FROM 0 TO str.length-1 STEP 1;)
        IF (str[i]==' ')
        THEN
            number_of_words++;
        END_IF
        IF (str[i]=="a" || str[i]=="e" || str[i]=="o" || str[i]=="i" || str[i]=="u")
        THEN
        number_of_vowels++;
        END_IF
        END_FOR
END
